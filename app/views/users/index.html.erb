
<div class='container'>
  <%= render 'nav'%>
  <h1 class= 'page_title'>List of Users</h1>
  <div>
      <ul>
    <% @users.each do |user| %>
        <li>
          <a href= "/users/<%= user.id %>" class = 'user_clickable'>
            <div class = 'user_container'>
              <img class = 'user_profile' src= '<%= user.photo %>' alt='photo comes here' width="100" height="100" />
              <nav>
              </nav>
              <div class = 'info_holder' >
                <h3><%= user.name %></h3>
                <p class = 'post_counter'>Post :  <%= user.post_counter %></p>
              </div>
            </div>
          </a> 
        </li>
    <% end %>
      </ul>
  </div>
</div>
