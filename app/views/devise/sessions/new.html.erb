<div class = 'container'>
  <h2 class = 'page_title'>Log in</h2>

  <%= form_for(resource, as: resource_name, :html => {class: 'new_post_form login_form' } , url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
    <% if devise_mapping.rememberable? %>
      <div class='field'>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= f.submit "Log in" , {:class => "comment_btn log_in_btn"} %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>